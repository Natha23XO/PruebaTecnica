@model IEnumerable<PruebaTecnicaMyper.Models.Trabajador>

@{
    ViewData["Title"] = "Listado de Trabajadores";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">@ViewData["Title"]</h2>

    <div class="d-flex align-items-center" style="gap:10px;">
        <form asp-action="Index" method="get" id="formFiltro" class="d-flex" style="gap:10px;">
            <div class="input-group input-group-sm">
                <span class="input-group-text bg-primary text-white"><i class="bi bi-person-lines-fill"></i></span>
                <select name="sexo" class="form-select" onchange="document.getElementById('formFiltro').submit()">
                    <option value="">Todos</option>
                    <option value="Masculino" selected="@(ViewData["SexoActual"]?.ToString() == "Masculino" ? "selected" : null)">Masculino</option>
                    <option value="Femenino" selected="@(ViewData["SexoActual"]?.ToString() == "Femenino" ? "selected" : null)">Femenino</option>
                </select>
            </div>
        </form>

        <button class="btn btn-info rounded-pill px-3 py-2" onclick="showModal('Crear', '@Url.Action("Create")')">
            <i class="bi bi-plus-circle"></i> Nuevo
        </button>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Documento</th>
            <th>Nombre Completo</th>
            <th>Tipo</th>
            <th>Sexo</th>
            <th>Fecha Nac.</th>
            <th>Dirección</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            var color = t.Sexo == "Masculino" ? "fila-masculino" : t.Sexo == "Femenino" ? "fila-femenino" : "";
            <tr class="@color">
                <td>@t.NumDocumento</td>
                <td>@($"{t.Nombres} {t.Apellidos}")</td>
                <td>@t.TipoDocumento</td>
                <td>@t.Sexo</td>
                <td>@t.FechaNac.ToShortDateString()</td>
                <td>@t.Direccion</td>
                <td class="d-flex justify-content-center gap-2">
                    <button class="btn btn-sm"
                            title="Editar"
                            onclick="showModal('Editar', '@Url.Action("Edit", new { id = t.NumDocumento })')">
                        <i class="bi bi-pencil-square"></i>
                    </button>

                    <button class="btn btn-sm"
                            title="Eliminar"
                            onclick="confirmDelete('@t.NumDocumento')">
                        <i class="bi bi-trash"></i>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="modalForm" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-black text-white">
                <h5 class="modal-title" id="modalTitle"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="modalBody"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        async function showModal(title, url) {
            $('#modalTitle').text(title + ' Trabajador');
            const response = await fetch(url);
            const html = await response.text();
            $('#modalBody').html(html);
            $('#modalForm').modal('show');
        }

        async function submitForm(form) {
            const url = form.action;
            const data = new FormData(form);

            const response = await fetch(url, {
                method: 'POST',
                body: data
            });

            const result = await response.json();

            if (result.success) {
                location.reload();
            } else {
                $('#modalBody').html(await response.text());
            }
        }

        function confirmDelete(id) {
            Swal.fire({
                title: "Atencion",
                text: "¿Estás seguro de eliminar este registro?",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#d33",
                cancelButtonColor: "#3085d6",
                confirmButtonText: "Sí, eliminar",
                cancelButtonText: "Cancelar"
            }).then((result) => {
                if (result.isConfirmed) {

                    $.ajax({
                        url: '/Trabajadores/Delete',
                        type: 'POST',
                        data: { id: id },
                        success: function (response) {
                            if (response.success) {
                                Swal.fire({
                                    title: "¡Eliminado!",
                                    text: "El registro fue eliminado correctamente.",
                                    icon: "success",
                                    timer: 1500,
                                    showConfirmButton: false
                                });

                                setTimeout(() => location.reload(), 1500);
                            } else {
                                Swal.fire("Error", response.message, "error");
                            }
                        },
                        error: function () {
                            Swal.fire("Error", "Ocurrió un problema al eliminar.", "error");
                        }
                    });
                }
            });
        }

        function setFotoPath() {
            const foto = document.getElementById("fotoFile");
            const fotoGuardar = document.getElementById("Foto");

            if (foto.files.length > 0) {
                const nombreArchivo = foto.files[0].name;
                fotoGuardar.value = nombreArchivo;
            } 
        }

    </script>
}
